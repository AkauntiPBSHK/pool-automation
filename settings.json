{
    "system": {
        "name": "Pool Automation System",
        "simulation_mode": true
    },
    "hardware": {
        "turbidity_sensor": {
            "type": "ChemitecS461LT",
            "port": "COM3",
            "modbus_address": 1,
            "baud_rate": 9600
        },
        "pac_pump": {
            "type": "ChonryWP110",
            "control_pin": 17,
            "min_flow_ml_h": 60,
            "max_flow_ml_h": 150
        },
        "steiel_controller": {
            "port": "/dev/ttyUSB1",
            "modbus_address": 1,
            "baud_rate": 9600
        }
    },
    "dosing": {
        "high_threshold_ntu": 0.25,
        "low_threshold_ntu": 0.12,
        "target_ntu": 0.15,
        "moving_avg_samples": 10
    },
    "network": {
        "enable_api": true,
        "api_port": 5000
    },
    "notification": {
        "enabled": false,
        "email": {
            "enabled": false,
            "smtp_server": "smtp.gmail.com",
            "smtp_port": 587,
            "use_tls": true,
            "username": "",
            "password": "",
            "from_address": "",
            "to_address": ""
        }
    }
}