{
    "system": {
      "name": "Pool Automation System",
      "debug": true,
      "simulation_mode": true,
      "log_level": "DEBUG"
    },
    "devices": {
      "turbidity_sensor": {
        "type": "ChemitecS461LT",
        "port": "/dev/ttyUSB0",
        "address": 1,
        "baudrate": 9600
      },
      "pac_pump": {
        "type": "ChonryWP110",
        "port": "/dev/ttyUSB1",
        "address": 1,
        "baudrate": 9600
      },
      "mco14_controller": {
        "type": "SteielMCO14EVO",
        "port": "/dev/ttyUSB2",
        "address": 1,
        "baudrate": 9600
      }
    },
    "control": {
      "turbidity": {
        "target": 0.15,
        "high_threshold": 0.25,
        "low_threshold": 0.12,
        "min_flow_ml_h": 60,
        "max_flow_ml_h": 150
      },
      "ph": {
        "target": 7.4,
        "high_threshold": 7.6,
        "low_threshold": 7.2
      },
      "chlorine": {
        "free_cl_target": 1.0,
        "free_cl_high": 1.5,
        "free_cl_low": 0.5,
        "combined_cl_max": 0.3
      }
    },
    "aws": {
      "sync_interval": 60,
      "endpoint": "https://api.biopool.design/pool-data",
      "retry_attempts": 3
    },
    "web": {
      "host": "0.0.0.0",
      "port": 5000
    }
  }